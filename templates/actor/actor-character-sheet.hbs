<form class="{{cssClass}} {{actor.type}}" autocomplete="off">

     {{> "systems/storyforge/templates/actor/parts/actor-header.hbs"}}

    {{#owner}}
    <nav class="sheet-tabs tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item" data-tab="roleplay">Roleplay</a>
        <a class="item" data-tab="combat">Combat</a>
        <a class="item" data-tab="inventory">Inventory</a>
        <a class="item" data-tab="traits">Traits</a>
        <a class="item" data-tab="skills">Skills</a>
        <a class="item" data-tab="trackers">Trackers</a>
        <a class="item" data-tab="effects">Effects</a>
    </nav>

    <div class="char-body">
        <div class="sheet-sidebar">
        {{> "systems/storyforge/templates/actor/pieces/actor-sidebar.hbs"}}
        </div>

        <div class="sheet-main">
            {{!-- Biography Tab --}}
            <div class="sheet-tabs tab biography" data-group="primary" data-tab="roleplay">
            {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
            {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
            </div>

            {{!-- Combat Tab --}}
            <div class="tab char-actions" data-group="primary" data-tab="combat">
            {{> "systems/storyforge/templates/actor/pieces/actor-actions.hbs"}}
            </div>

            {{!-- Owned Traits Tab --}}
            <div class="tab char-traits" data-group="primary" data-tab="traits">
            {{> "systems/storyforge/templates/actor/pieces/actor-traits.hbs"}}
            </div>

            {{!-- Owned Items Tab --}}
            <div class="tab char-iventory" data-group="primary" data-tab="inventory">
            {{> "systems/storyforge/templates/actor/pieces/actor-currencies.hbs"}}
            {{> "systems/storyforge/templates/actor/pieces/actor-inventory.hbs"}}
            </div>

            {{!-- Owned Skills Tab --}}
            <div class="tab char-skills" data-group="primary" data-tab="skills">
            {{> "systems/storyforge/templates/actor/pieces/actor-skills.hbs"}}
            </div>

            {{!-- Owned Skills Tab --}}
            <div class="tab char-trackers" data-group="primary" data-tab="trackers">
            {{> "systems/storyforge/templates/actor/pieces/actor-trackers.hbs"}}
            </div>

            {{!-- Active Effects Tab --}}
            <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "systems/storyforge/templates/actor/parts/actor-effects.hbs"}}
            </div>
        </div>
    </div>
    {{/owner}}

    {{#unless owner}}
        <div class="observer-desc">
            {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
        </div>
    {{/unless}}

</form>

